.search-top {
  height: 100rpx;
  background-color: #262528;
  padding-top: 46rpx;
  position: relative;
}

.search-box {
  width: 384rpx;
  height: 64rpx;
  background: #525252;
  border-radius: 4rpx;
  position: absolute;
  bottom: 25rpx;
  margin-left: 96rpx;
}

.btn-back {
  width: 18rpx;
  height: 34rpx;
  position: absolute;
  left: 32rpx;
  bottom: 39rpx;
}

.search-box image {
  width: 32rpx;
  height: 32rpx;
  float: left;
  position: relative;
  margin: 16rpx;
}

.search-box input {
  height: 100%;
  color: #ffffff;
}

.search-item {
  padding: 0 32rpx;
}

.search-item .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #262528;
  line-height: 44rpx;
  margin-top: 64rpx;
  margin-bottom: 32rpx;
}

.search-item .title image {
  width: 32rpx;
  height: 32rpx;
  float: right;
  margin-top: 6rpx;
}

.search-item li {
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 48rpx;
  height: 48rpx;
  background: #F7F7F7;
  border-radius: 24rpx;
  padding: 0 24rpx;
  display: inline-block;
  margin-right: 32rpx;
  margin-bottom: 28rpx;
}

