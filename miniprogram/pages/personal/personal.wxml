<view class="personal-page">
  <view class="top-block">
    <view class="swiper-box">
      <swiper bindchange="onChange" autoplay="3000">
        <block wx:for="{{swiperImgUrls}}" wx:key="url">
          <swiper-item>
            <image class="swiper-img" src="{{item.url}}"></image>
          </swiper-item>
        </block>
      </swiper>
      <view class="indicator-box">
        <text class="current">{{current + 1}}</text>
        <text class="total">/{{swiperImgUrls.length}}</text>
      </view>
    </view>
    <view class="personal-info">
      <image class="portrait-img" src="http://p1.music.126.net/xhWAaHI-SIYP8ZMzL9NOqg==/109951164167032995.jpg"></image>
      <text class="name">德莱尼木有小徳</text>
      <view class="support">
        <image class="heart-icon" src="../../images/heart-icon.png"></image>
        <text class="num">666</text>
      </view>
    </view>
  </view>
  <view class="content-switch-box">
    <y-switch-item class="item" data-index="{{item.index}}" bindtap="onSwitch" isActived="{{item.index === switchIndex}}" wx:for="{{switchList}}" wx:key="index">{{item.text}}</y-switch-item>
  </view>
  <view wx:if="{{switchIndex === 0}}">
    <y-personal-talk></y-personal-talk>
  </view>
  <view wx:if="{{switchIndex === 1}}">
    <y-concern-talk></y-concern-talk>
    <y-personal-album></y-personal-album>
  </view>
  <view wx:if="{{switchIndex === 2}}">
    <mp-slideview buttons="{{slideButtons}}" bindbuttontap="slideButtonTap">
      <y-personal-album></y-personal-album>
    </mp-slideview>
    <y-personal-album></y-personal-album>
  </view>
</view>
