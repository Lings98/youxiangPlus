.personal-page {
  background-color: #ffffff;
  height: 100vh;
}

.top-block {
  position: relative;
}

swiper {
  height: 750rpx;
  border-bottom-left-radius: 64rpx;
  overflow: hidden;
}

.swiper-img {
  width: 100%;
  height: 100%;
}

.indicator-box {
  font-weight: bold;
  color: #FFFFFF;
  position: absolute;
  left: 80rpx;
  bottom: 20rpx;
}

.current {
  font-size: 56rpx;
  line-height: 64rpx;
}

.total {
  font-size: 40rpx;
  line-height: 48rpx;
}

.personal-info {
  width: 432rpx;
  height: 80rpx;
  background: #F7F7F7;
  border-radius: 16rpx 0 0 64rpx;
  position: absolute;
  right: 0;
  bottom: -48rpx;
  padding: 32rpx 64rpx 32rpx 32rpx;
}

.personal-info .portrait-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.personal-info .name {
  font-size: 34rpx;
  font-weight: 500;
  color: #262528;
  line-height: 48rpx;
  position: relative;
  top: -27rpx;
  margin-left: 20rpx;
}
.personal-info .support{
  float: right;
  text-align: center;
}

.personal-info .heart-icon {
  width: 32rpx;
  height: 32rpx;
  margin-top: 8rpx;
}

.personal-info .num {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #B8B8B8;
  line-height: 32rpx;
}

.content-switch-box {
  padding: 96rpx 32rpx 0;
}

.content-switch-box .item {
  width: 200rpx;
}