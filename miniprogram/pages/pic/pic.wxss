.pics-page {
  height: 702rpx;
  padding-top: 48rpx;
  background: linear-gradient(180deg, #262528 0%, rgba(38, 37, 40, 0) 100%);
}

.input-box {
  margin-left: 32rpx;
  width: 320rpx;
  height: 64rpx;
  background: #525252;
  border-radius: 4rpx;
  padding-left: 64rpx;
  position: relative;
}

.want-box {
  height: 64rpx;
  flex: 1;
}

.swiper-item {
  height: 64rpx;
  position: relative;
}

.swiper-item .desc{
  font-size: 20rpx;
  font-weight: 400;
  color: #B8B8B8;
  line-height: 28rpx;
  position: relative;
  top: -14rpx;
}

.swiper-item .keyword {
  font-size: 24rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 34rpx;
  display: block;
  position: relative;
  top: -12rpx;
}

.text-box {
  margin-left: 32rpx;
}

.portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  position: absolute;
  right: 32rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 16rpx;
  top: 16rpx;
}

.album-title {
  width: 134rpx;
  height: 68rpx;
  padding-left: 32rpx;
  margin-bottom: 20rpx;
  margin-top: 48rpx;
}

.album-box {
  margin-left: 32rpx;
  display: flex;
  white-space: nowrap;
  margin-bottom: 48rpx;
  height: 160rpx;
}

.album-item {
  width: 256rpx;
  height: 160rpx;
  border-radius: 16rpx 32rpx 16rpx 32rpx;
  margin-right: 16rpx;
}

.album-item:last-child {
  margin-right: 64rpx;
}

.img-box {
  padding: 0 32rpx;
  display: flex;
}

.img-title {
  width: 156rpx;
  height: 68rpx;
  margin-left: 32rpx;
  margin-bottom: 24rpx;
}

.img-left,.img-right {
  flex: 1;
}

.img-right {
  text-align: right;
}

.img-item {
  width: 320rpx;
  margin-bottom: 24rpx;
}