.top-pic {
  width: 100%;
  height: 344rpx;
}
.ablum-info {
  position: relative;
  margin-bottom: 32rpx;
  padding-left: 32rpx;
}

.ablum-title{
  margin-top: 16rpx;
}
.ablum-title image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.ablum-title text {
  font-size: 28rpx;
  font-weight: 500;
  color: #262528;
  line-height: 48rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #262528;
  line-height: 48rpx;
  margin-top: 16rpx;
  margin-bottom: 8rpx;
}

.concern {
  font-size: 20rpx;
  font-weight: 300;
  color: #B8B8B8;
  line-height: 32rpx;
}

.img-box {
  position: absolute;
  left: 294rpx;
  top: 0;
  height: 176rpx;
}

.img-box image {
  width: 252rpx;
  height: 156rpx;
  position: absolute;
  border: 10rpx solid #ffffff;
  border-radius: 25rpx;
}

.img-box image:first-child{
  z-index: 3;
  left: 0;
}
.img-box image:nth-child(2){
  z-index: 2;
  left: 80rpx;
}
.img-box image:nth-child(3){
  z-index: 1;
  left: 160rpx;
}
