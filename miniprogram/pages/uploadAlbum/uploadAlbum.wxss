.upload-page {
  background-color: #ffffff;
  height: 100vh;
  padding: 48rpx 48rpx;
}

.upload-img {
  margin: 0 -10rpx;
}
.pic-item {
  width: 208rpx;
  height: 208rpx;
  border-radius: 8rpx;
  margin: 8rpx;
  display: inline-block;
  overflow: hidden;
  position: relative;
}

.pic-item .pic {
  width: 100%;
  height: 100%;
}

.pic-item .delete-pic {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  z-index: 2;
  top: 50%;
  margin-top: -24rpx;
  left: 50%;
  margin-left: -24rpx;
}
 
.label {
  font-size: 34rpx;
  font-weight: 400;
  color: #262528;
  line-height: 48rpx;
}

.label.bold {
  font-weight: 500;
}

.num {
  font-size: 28rpx;
  font-weight: bold;
  color: #DFDEE0;
  line-height: 48rpx;
  float: right;
}

.add-words {
  width: 48rpx;
  height: 48rpx;
  float: right;
}

.words-item {
  display: inline-block;
  height: 48rpx;
  background-color: #F7F7F7;
  border-radius: 24rpx;
  margin: 0 36rpx 32rpx 0;
  padding: 0 20rpx;
}

.delete-word {
  width: 32rpx;
  height: 32rpx;
  position: relative;
  top: 8rpx;
}

.mb-32 {
  margin-bottom: 32rpx;
}

.album-title {
  display: flex;
  margin: 40rpx 0;
}

.album-title .name {
  background-color: transparent;
  flex: 1;
  text-align: right;
  font-size: 34rpx;
  font-weight: 400;
  color: #666666;
}

.copyright {
  margin-top: 8rpx;
}

.explain-icon {
  width: 32rpx;
  height: 32rpx;
  position: relative;
  top: 6rpx;
  margin-left: 8rpx;
}

.arrow-right {
  width: 24rpx;
  height: 24rpx;
  float: right;
  position: relative;
  top: 12rpx;
}

.btn-block {
  margin-top: 88rpx;
}