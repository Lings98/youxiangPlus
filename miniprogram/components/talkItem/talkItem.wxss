.talkItem-box {
  background-color: #fff;
  margin: 0 32rpx 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.talkItem-box > image {
  width: 100%;
  height: 384rpx;
}

.talkItem-box > text {
  font-size: 36rpx;
  font-weight: 500;
  color: #262528;
  line-height: 50rpx;
  display: block;
  margin: 28rpx 32rpx 0;
}

.talk-info .people-image-box {
  margin-top: 16rpx;
  margin-left: 32rpx;
  float: left;
}

.talk-info image {
  width: 48rpx;
  height: 48rpx;
  border: 2rpx solid #FFFFFF;
  border-radius: 50%;
  margin-left: -12rpx;
}

.text-box text {
  float: left;
  margin-top: 24rpx;
  font-size: 24rpx;
  color: #8F8F8F;
}

.text-box .num {
  float: left;
  margin-left: 16rpx;
  font-size: 28rpx;
  color:#7C40EC;
} 

button {
  float: right;
  margin-top: 15rpx;
  margin-right: 32rpx !important;
  margin-bottom: 15rpx;
  width: 176rpx !important;
  height: 76rpx;
  background-color: transparent;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: contain;
}
