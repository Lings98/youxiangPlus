.pic-bottom-box {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #ffffff;
  padding: 16rpx 32rpx;
  box-shadow: 0 -2rpx 0 0 rgba(225,225,225,0.5);
}

.btn {
  width: 366rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #262528;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
  display: inline-block;
  text-align: center;
}

.edit-box, .share-box, .thumb-box{
  display: inline-block;
  position: relative;
  top: 12rpx;
}

.edit-box, .thumb-box {
  margin-left: 80rpx;
}

.share-box {
  margin-left: 64rpx;
}

.edit-box image, .share-box image, .thumb-box image {
  width: 48rpx;
  height: 48rpx;
}

.edit-box text, .thumb-box text {
  font-size: 24rpx;
  font-weight: 400;
  color: #B8B8B8;
  line-height: 32rpx;
}