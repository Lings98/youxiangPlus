.switch-item {
  display: inline-block;
  font-size: 22rpx;
  font-weight: 400;
  color: #B8B8B8;
  line-height: 48rpx;
  position: relative;
  text-align: center;
}

.switch-item.actived {
  font-size: 32rpx;
  font-weight: 500;
  color: #262528;
  line-height: 48rpx;
}

.switch-item.actived:after {
  content: '';
  position: absolute;
  width: 16rpx;
  height: 4rpx;
  background: #7C40EC;
  bottom: -4rpx;
  left: 50%;
  margin-left: -8rpx;
}